.login-container
  .row
    .login
      %h1 Login

      = form_tag user_sessions_path, :method => :post, :class => "form" do
        %ul
          %li
            = label_tag :username
            = text_field_tag :username
          %li
            = label_tag :password
            = password_field_tag :password
          %li
            = submit_tag "Login", class: "btn btn-secondary"
